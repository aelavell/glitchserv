<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
  <title>Node Authentication</title>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <style>
    body    { padding-top:80px; word-wrap:break-word; }
  </style>
</head>
<body>
<div class="container">

  <div class="page-header text-center">
    <h1><span class="fa fa-anchor"></span> Profile Page</h1>
    <a href="/logout" class="btn btn-default btn-sm">Logout</a>
  </div>

  <div class="row">

    <!-- LOCAL INFORMATION -->
    <div class="col-sm-6">
      <div class="well">
        <h3><span class="fa fa-user"></span> Local</h3>

          <p>
            <strong>id</strong>: <%= user._id %><br>
            <strong>username</strong>: <%= user.username %><br>
            <strong>email</strong>: <%= user.email %><br>
            <strong>password</strong>: <%= user.password %>
          </p>

      </div>
    </div>

  </div>

  <form action="/glitch" method="post" enctype="multipart/form-data"> 
    <div class="form-group">
      <label>Glitch</label>
      <input type="file" class="form-control" name="image">
      Target Wizard: <input type="text" class="form-control" name="target_wizard">
      Image Type: <input type="text" class="form-control" name="image_type">
    </div>
    <button type="submit" class="btn btn-warning btn-lg">Submit</button>
    <a href="http://localhost:8080/glitches">GLITCHES</a>
  </form>

</div>
</body>
</html>
